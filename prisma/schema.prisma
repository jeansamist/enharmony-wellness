generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        BigInt   @id @default(autoincrement())
  full_name String
  email     String   @unique
  password  String
  role      String
  posts     Post[]
  reviews   Review[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Post {
  id          BigInt     @id @default(autoincrement())
  type        PostType   @default(text)
  cover       String
  video_url   String?
  title       String
  description String
  slug        String
  content     String
  views       Int
  read_time   Int
  category_id BigInt
  category    Category   @relation(fields: [category_id], references: [id])
  user_id     BigInt
  user        User       @relation(fields: [user_id], references: [id])
  approved    Boolean
  published   Boolean
  reviews     Review[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Category {
  id    BigInt @id @default(autoincrement())
  name  String
  posts Post[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Review {
  id      BigInt @id @default(autoincrement())
  user_id BigInt
  user    User   @relation(fields: [user_id], references: [id])
  post_id BigInt
  post    Post   @relation(fields: [post_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum PostType {
  text
  video
}

model Newsletter {
  id         BigInt   @id @default(autoincrement())
  email      String   @unique
  segments   NewsletterSegment[]
  events     CampaignEvent[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model NewsletterSegment {
  id          BigInt       @id @default(autoincrement())
  name        String       @unique
  subscribers Newsletter[]
  campaigns   Campaign[]
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
}

model Campaign {
  id          BigInt            @id @default(autoincrement())
  name        String
  subject     String
  content     String? // Optional: store the HTML content sent
  post_id     BigInt?
  segment_id  BigInt?
  segment     NewsletterSegment? @relation(fields: [segment_id], references: [id])
  events      CampaignEvent[]
  sent_at     DateTime          @default(now())
  created_at  DateTime          @default(now())
  updated_at  DateTime          @updatedAt
}

model CampaignEvent {
  id            BigInt     @id @default(autoincrement())
  campaign_id   BigInt
  campaign      Campaign   @relation(fields: [campaign_id], references: [id])
  subscriber_id BigInt
  subscriber    Newsletter @relation(fields: [subscriber_id], references: [id])
  type          String     // "open", "click"
  metadata      String?    // URL for clicks, etc.
  created_at    DateTime   @default(now())
}
